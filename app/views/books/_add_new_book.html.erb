<div class="Add_Book">
  <h2>New book</h2>
  <%= form_for(book) do |f| %>
    <div class="row">
      <div class="col-xs-12">
        <%= f.label :title %><br />
        <%= f.text_field :title, class:"", rows:"3", placeholder:"" %>
      </div>
      <div class="col-xs-12">
        <label for="book_body">Opinion</label><br />
        <%= f.text_area :body, class:"", rows:"3", placeholder:"" %>
      </div>
    </div>
    <%= f.submit "Create Book", class:"btn btn-default" %>
  <% end %>
</div>
