<div class="Add_Book">
  <h2>New book</h2>
  <%= form_for(book) do |f| %>
    <div class="new_book_wrap">
      <label for="book_title">Title</label><br>
      <%= f.text_field :title, class:"", placeholder:"" %>
    </div>
    <div class="new_book_wrap">
      <label for="book_body">Opinion</label><br>
      <%= f.text_area :body, class:"", placeholder:"" %>
    </div>
    <div class="w_btn">
      <%= f.submit "Create Book", class:"btn btn-default" %>
    </div>
  <% end %>
</div>
