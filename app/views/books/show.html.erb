<%= render 'users/userinfo', user: @user %>
<%= render 'books/add_new_book', book: @new_book%>
<div class="">
  <h2>Book detail</h2>
  <%= link_to user_path(@user) do %>
    <%= attachment_image_tag @user , :profile_image, :fill, 60, 60, format: 'jpeg', class: " profile-img", fallback: "no_image.jpg" %>
    <%= @user.name %>
  <% end %>
  <%= @book.title %>
  <%= @book.body %>
  <% if @user.id == current_user.id %>
    <p><%= link_to "Edit", edit_book_path(@book)%></p>
    <p><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '削除しますか？' } %></p>
  <% end %>
</div>
