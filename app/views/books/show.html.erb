<div class="row">
  <div class="col-xs-3">
    <%= render 'users/userinfo', user: @user %>
    <%= render 'books/add_new_book', book: @new_book%>
  </div>
  <div class="col-xs-9">
    <h2>Book detail</h2>
    <div class="book_detail_box">
      <div class="mini_profile">
        <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user , :profile_image, :fill, 60, 60, format: 'jpeg', class: " profile-img", fallback: "no_image.jpg" %>
          <%= @user.name %>
        <% end %>
      </div>
      <div class="detail_title">
        <%= @book.title %>
      </div>
      <div class="detail_opinion">
        <%= @book.body %>
      </div>
      <div class="detail_button_box">
        <% if @user.id == current_user.id %>
          <p><%= link_to "Edit", edit_book_path(@book)%></p>
          <p><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '削除しますか？' } %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
