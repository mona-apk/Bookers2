<h1>welcome to Bookers !!</h1>
<% if user_signed_in? %>
  <%= link_to 'Log in', user_path(current_user), class: "btn btn-info col-xs-10 col-xs-offset-1 sign_in" %>
  <%= link_to 'Sign up', user_path(current_user), class: "btn btn-success col-xs-10 col-xs-offset-1 sign_up" %>
<% else %>
  <%= link_to 'Log in', new_user_session_path, class: "btn btn-info col-xs-10 col-xs-offset-1 sign_in" %>
  <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-success col-xs-10 col-xs-offset-1 sign_up" %>
<% end %>
