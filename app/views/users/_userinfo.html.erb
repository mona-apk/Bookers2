<div class="User_Info">
  <h2>User info</h2>
  <div class="">
    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: " profile-img", fallback: "no_image.jpg" %>
  </div>
  <div class="user_name">
    <h4>name</h4>
    <p class="text_center"><%= user.name %></p>
  </div>
  <div class="user_introduction">
    <h4>introduction</h4>
    <p class="text_center"><%= user.introduction %></p>
  </div>
  <div class="user_edit_btn">
    <%= link_to '編集', edit_user_path(user.id), class: "btn btn-default" %>
  </div>
</div>
